<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gadgeon.com.charts.charts.LineChart">

    <com.androidplot.pie.PieChart
        android:id="@+id/pieplot"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        androidPlot.title="A Simple Pie Chart"
     
        androidPlot.titleWidget.labelPaint.textColor="#111111"
        androidPlot.titleWidget.labelPaint.textSize="20sp"
         />

</FrameLayout>